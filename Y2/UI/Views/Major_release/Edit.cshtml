                    <input type="hidden" name="register" value="@Model.register" />
                    <input type="hidden" name="regist_time" value="@Model.regist_time" />
                    <input type="hidden" name="mre_id" value="@Model.mre_id"/>
                    <input type="hidden" name="first_kind_name" value="@Model.first_kind_name" />
                    <input type="hidden" name="first_kind_id" value="@Model.first_kind_id" />
                    @Model.first_kind_name

                </td>
                <td width="11%" class="TD_STYLE1">
                    II级机构
                </td>
                <td width="14%" class="TD_STYLE2">
                    <input type="hidden" name="second_kind_name" value="@Model.second_kind_name"  />
                    <input type="hidden" name="second_kind_id" value="@Model.second_kind_id" />
                    @Model.second_kind_name
                </td>
                <td width="11%" class="TD_STYLE1">
                    III级机构
                </td>
                <td class="TD_STYLE2">
                    <input type="hidden" name="third_kind_name" value="@Model.third_kind_name" />
                    <input type="hidden" name="third_kind_id" value="@Model.third_kind_id" />
                    @Model.third_kind_name
                </td>
                <td width="11%" class="TD_STYLE1">
                    招聘类型
                </td>
                <td class="TD_STYLE2" colspan="2">

                    <select name="engage_type" id="engageType" class="SELECT_STYLE1">



                        @if (Model.engage_type == "校园招聘")
