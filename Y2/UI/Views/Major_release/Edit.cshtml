                        }
                        else
                        {
                            <option value="校园招聘">校园招聘</option>
                            <option value="社会招聘" selected>社会招聘</option>
                        }




                    </select>
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    职位分类
                </td>
                <td class="TD_STYLE2">
                    <input type="hidden" name="major_kind_name" value="@Model.major_kind_name" />
                    <input type="hidden" name="major_kind_id" value="@Model.major_kind_id" />
                  @Model.major_kind_name
                </td>
                <td class="TD_STYLE1">
                    职位名称
                </td>
                <td class="TD_STYLE2">
                    <input type="hidden" name="major_name" value="@Model.major_name" />
                    <input type="hidden" name="major_id" value="@Model.major_id" />
                 @Model.major_name
                </td>
                <td class="TD_STYLE1">
                    招聘人数
                </td>
                <td class="TD_STYLE2">
                    <input type="text" id="rs" name="human_amount" value="@Model.human_amount" class="INPUT_STYLE2">
                </td>
                <td class="TD_STYLE1">
                    截止日期
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="deadline"
                          id="jzrq" class="INPUT_STYLE2" onfocus="WdatePicker({ lang: 'zh-cn' })" value="@Model.deadline">
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    变更人
                </td>
                <td class="TD_STYLE2">
                    @*<input type="text" name="changer" value="@Model.changer" class="INPUT_STYLE2">*@
                    <select name="changer">
                     @{List<users> user = ViewBag.user;}
                           <option value="">--请选择--</option>
                        @foreach (var item in user)
                        {
                            if (Model.changer == item.u_true_name)
                            {
                                <option value="@item.u_true_name" selected>@item.u_true_name</option>
                            }
                            else
                            {
                                <option value="@item.u_true_name">@item.u_true_name</option>
                            }

                        }

                    </select>
                </td>
                <td class="TD_STYLE1">
                    变更时间
                </td>
                <td class="TD_STYLE2">
                    <input type="text" name="change_time"
                           value="@Model.change_time" id="nowTime"
                           class="INPUT_STYLE2">
                </td>

                <td>&nbsp; </td>
                <td>&nbsp; </td>
                <td>&nbsp; </td>
                <td>&nbsp; </td>

            </tr>
            <tr>
                <td class="TD_STYLE1">
                    职位描述
                </td>
                <td class="TD_STYLE2" colspan="8">
                    <textarea name="major_describe" id="comm" rows="4" cols="100%" class="TEXTAREA_STYLE1">@Model.major_describe</textarea>
                </td>

            </tr>
            <tr>
                <td class="TD_STYLE1">
                    招聘要求
                </td>
                <td class="TD_STYLE2" colspan="8">
                    <textarea name="engage_required" id="yq" rows="4" cols="100%" class="TEXTAREA_STYLE1">@Model.engage_required</textarea>
                </td>

            </tr>
