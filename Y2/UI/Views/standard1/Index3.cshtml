                </td>
                <td>
                    <input type="text" id="'salary'+[index]" v-model="item.salary" name="'details'+[index]+'.salary'" v-on:keyup="countMoney(mss.length-1,'salary'+[index])" class="INPUT_STYLE2" readonly="true">

