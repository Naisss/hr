@model  users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>编辑用户</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.2.js"></script>
    <script src="~/Scripts/jquery.messager.js"></script>
    <script src="~/Scripts/user_add.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <link href="~/css/easyui.css" rel="stylesheet" />
    <link href="~/css/icon.css" rel="stylesheet" />
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
</head>
<body>
    <form  action="/Quanxian/Update" method="post">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--编辑用户</font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" id="powerAction!doModifyUser_0" value="&#20445;&#23384;" class="BUTTON_STYLE1" />
                    <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back()">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=3 cellspacing=1   bordercolorlight=#848284 bordercolordark=#eeeeee   class="TABLE_STYLE1">
            <tr>
                <td class="TD_STYLE1">用户名称</td>
                <td class="TD_STYLE2">
                    <input type="text" value=@Model.u_name id="userName" name="u_name" />
                    <input type="hidden" name="u_id" value=@Model.u_id />
                </td>
                <td class="TD_STYLE1">用户密码</td>
                <td class="TD_STYLE2">
                    <input type="password" value=@Model.u_password id="userPassword" name="u_password" />
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">真实姓名</td>
                <td class="TD_STYLE2">
                    <input type="text" value=@Model.u_true_name id="userTrueName" name="u_true_name" />
                </td>
                <td class="TD_STYLE1">用户身份</td>
                <td class="TD_STYLE2">
                    <select name="u_roleid" id="powerAction!doModifyUser_users_sysRole_roleId">
                        <option value=@Model.u_roleid selected="selected">@ViewBag.RoleName</option>
                        @foreach (DataRow dr in ViewBag.data.Rows)
                        {
                            <option value=@dr["RoleId"]>@dr["RoleName"]</option>
                        }
                    </select>
                </td>
            </tr>
        </table>
        <table class="grandfather">
            <tr>
                <td>
                    <ul id="tt"></ul>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>


