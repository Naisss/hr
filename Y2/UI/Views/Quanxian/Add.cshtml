
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>添加用户</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.2.js"></script>
    <script src="~/Scripts/jquery.messager.js"></script>
    <script src="~/Scripts/user_add.js"></script>
</head>
<body>
    <form method="post" action="/Quanxian/Add">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--添加用户</font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="保存" class="BUTTON_STYLE1" />
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back()">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=3 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td class="TD_STYLE1">用户名称</td>
                <td class="TD_STYLE2">
                    <input type="hidden" name="u_id" value="" /> 
                    <input type="text" id="userName" name="u_name" />
                </td>
                <td class="TD_STYLE1">用户密码</td>
                <td class="TD_STYLE2">
                    <input type="password" id="userPassword" name="u_password" />
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">真实姓名</td>
                <td class="TD_STYLE2">
                    <input type="text" id="u_true_name" name="u_true_name" />
                </td>
                <td class="TD_STYLE1">用户身份</td>
                <td class="TD_STYLE2">
                    <select name="u_roleid">
                        @foreach  (DataRow dr in ViewBag.data.Rows)
                        {
                            <option value=@dr["RoleId"]>@dr["RoleName"]</option>
                        }
                    </select>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>

