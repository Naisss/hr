@model JueSe
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>编辑角色</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/javascript/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>    
    <link href="~/css/easyui.css" rel="stylesheet" />
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <link href="~/jquery-easyui-1.3.5/icon.css" rel="stylesheet" />
    <script src="~/javascript/right_list_information.js"></script>
    <style type="text/css">

        .parent {
            margin-left: 50px;
        }

        .children {
            margin-left: 20%;
        }
    </style>
</head>
<body>
        <table width="100%">
            <tr>
                <td>
                    <font color="black">您正在做的业务是：人力资源--权限管理--编辑角色</font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" id="updates" value="修改" class="BUTTON_STYLE1" />
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back()">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=3 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td class="TD_STYLE1">角色编号</td>
                <td class="TD_STYLE2">@Model.RoleId</td>
                <td class="TD_STYLE1">角色名称</td>
                <td class="TD_STYLE2">
                    <input type="text" class="INPUT_STYLE2"  id="rname" value=@Model.RoleName
                           name="RoleName" />
                    <input type="hidden"  id="RoleId" name="RoleId" value=@Model.RoleId />
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">角色说明</td>
                <td class="TD_STYLE2">
                    <input type="text" id="sm"  class="INPUT_STYLE2" value=@Model.Sm name="Sm" />
                </td>
                <td class="TD_STYLE1">角色是否可用</td>
                <td class="TD_STYLE2">                
                    <select name="Display" id="dis">
                        @if (Model.Display == "是")
                        {
                            <option value="是" selected="selected">是</option>
                            <option value="否">否</option>
                        }
                        @if(Model.Display == "否")
                        {
                        <option value="否" selected="selected">否</option>
                        <option value="是">是</option>
                        }
                    </select>
                </td>
            </tr>
        </table>
        <table class="grandfather">
            <tr>
                <td>
                    <ul id="tt"></ul>
                </td>
            </tr>
        </table>
        <script type="text/javascript">
            $(function () {
                $("#tt").tree({
                    url: "/Quanxian/QX?rid="+@Model.RoleId,
                    checkbox:true,
                    onLoadSuccess: function (node, data) {
                        var $tree = $(this);//获取树控件
                        for (var i = 0; i < data.length; i++) {
                            var d = data[i];
                            if (d.state == "closed") {
                                $tree.tree("expandAll");
                            }
                        }
                    }
                });
                $("#updates").click(function(){
                    var pid = "";//权限ID
                    var nodes = $('#tt').tree('getChecked');//获取选中的多选框
                    for (var i = 0; i < nodes.length; i++) {
                        pid += nodes[i].id + ",";
                    }
                    var nodes1 = $('#tt').tree('getChecked', 'indeterminate');//获取选中的半勾的多选框
                    for (var i = 0; i < nodes1.length; i++) {
                        pid += nodes1[i].id + ",";
                    }
                    //获取修改后的pid
                    pid = pid.substring(0, pid.length - 1);
                    //发送ajax把rid和pid字符串（split（‘，’））
            $.ajax({
                url: "/Quanxian/Edit",
                type: "post",
                data: "QxId=" + pid+"&JsId="+@Model.RoleId+"&RoleName="+$("#rname").val()+"&Sm="+$("#sm").val()+"&Display="+$("#dis").val(),
                success: function (msg) {
                    if (msg == "ok") {
                        alert('成功！');
                        window.location.href="/Quanxian/List";
                    }
                }
            });                          
            });
            });
    </script>
    </body>
</html>
