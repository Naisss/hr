@model IEnumerable<Entity.human_file>

@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <script src="~/Scripts/jquery-1.7.2.js"></script>
    <script src="~/javascript/vue.js"></script>
    <link href="~/css/table.css" rel="stylesheet" />
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
    <title>无标题文档</title>
    <STYLE type="text/css">
        td {
            text-align: center;
        }
    </STYLE>
    <script type="text/javascript">

    </script>
</head>

<body>

    <table width="100%">
        <tr>
            <td colspan="2" style="text-align: left">
                <font color="black">
                    您正在做的业务是：人力资源--薪酬标准管理--薪酬发放登记(负责人控制)
                </font>

            </td>
        </tr>

    </table>

  
    <br>
  
    @{ 
        int count = 0;
        int kindct = 0;
        decimal salay_sum = 0;
        decimal paid_salary = 0;


        kindct = (ViewBag.first as List<config_file_first_kind>).Count;
        foreach (config_file_first_kind item in ViewBag.first)
        {

            foreach (human_file it2 in ViewBag.human_file)
            {

                if (item.first_kind_id == it2.first_kind_id)
                {
                    count++;
                    salay_sum += Convert.ToDecimal(it2.salary_sum);
                    paid_salary = Convert.ToDecimal(it2.paid_salary_sum);
                }
            }
        }
    }
    薪酬总数:<label>@kindct</label>
    总人数:@count，基本酬总数:@salay_sum，实发总额: @paid_salary
        <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
            @{ 

        <tr>
            <td width="10%" class="TD_STYLE1">
                <span>序号</span>
            </td>


            <td width="40%" class="TD_STYLE1">
                <span>I级机构名称</span>
            </td>
            <td width="10%" class="TD_STYLE1">
                <span>人数</span>
            </td>
            <td width="10%" class="TD_STYLE1">
                基本薪酬总额(元)
            </td>
            <td width="10%" class="TD_STYLE1">
                登记
            </td>
        </tr>
                int i = 0;
                foreach (config_file_first_kind item in ViewBag.first)
                {
                    decimal humsun = 0;
                    decimal listcount = 0;
                    foreach (human_file item2 in ViewBag.human_file)
                    {

                        if (item.first_kind_id == item2.first_kind_id)
                        {

                            humsun += Convert.ToDecimal(item2.salary_sum);
                            listcount++;
                        }
                    }
                    i++;
                    <tr class="TD_STYLE2">
                        <td>
                            @i
                        </td>
                        <td> @item.first_kind_name </td>
                        <td>
                            @listcount
                        </td>
                        <td>
                            @humsun
                        </td>
                        <td>
                            <a href="/salary_grant/_GUN?id=@item.first_kind_id&Name=@item.first_kind_name">登 记</a>
                        </td>
                    </tr>


            
                        }

                        }
</table>
</body>
</html>